doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width')
    script(src='//use.typekit.net/oso7pkn.js')
    script try{Typekit.load();}catch(e){}
    title {{ site.title }}{% if page.title %} : {{ page.title }}{% endif %}
    meta(name='description', content='{{ site.subtitle }}')
    link(rel='stylesheet', href='{{ site.baseurl }}/css/main.css')
    <!--[if lt IE 9]>
    script(src='{{ site.baseurl }}/js/shiv.js')
    <![endif]-->
  body
    div#nav {% include header.html %}
    div#sidebar {% include navigation.html %}
    div#main(tabindex='0') {{ content }}
    script(src='{{ site.baseurl }}/js/global.js')
